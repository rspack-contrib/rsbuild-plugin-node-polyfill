{
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"target": "ES2020",
		"lib": ["DOM", "ESNext"],
		"module": "esnext",
		"strict": true,
		"declaration": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler"
	},
	"include": ["src"]
}
